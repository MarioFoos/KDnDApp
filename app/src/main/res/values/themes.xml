<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.KDnDApp" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="edit_style">
        <item name="android:textSize">@dimen/fontEdit</item>
        <item name="android:textColor">@color/text_edit</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:lines">1</item>
        <item name="android:layout_height">@dimen/editDialogH</item>
        <item name="android:paddingStart">@dimen/editDialogPaddingH</item>
        <item name="android:paddingEnd">@dimen/editDialogPaddingH</item>
        <item name="android:paddingTop">@dimen/editDialogPaddingV</item>
        <item name="android:paddingBottom">@dimen/editDialogPaddingV</item>
        <item name="android:background">@drawable/shape_edit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHighlight">@color/editSelectedBg</item>
        <item name="android:textColorLink">@color/editSelectedBg</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Texto básico, usando en los popup de info -->
    <style name="text_info">
        <item name="android:textSize">@dimen/dialogFontDesc</item>
        <item name="android:textColor">@color/textNormalFace</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <!-- Texto de título en los dialogos -->
    <style name="text_title" parent="text_info">
        <item name="android:textSize">@dimen/dialogFontTitle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- Texto de descripción de campos en los dialogos -->
    <style name="text_desc" parent="text_info">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- Base de los botones -->
    <style name="but_base_style">
        <item name="android:textSize">@dimen/fontBut</item>
        <item name="android:paddingStart">@dimen/butPaddingH</item>
        <item name="android:paddingEnd">@dimen/butPaddingH</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Botones marrones de los diálogos -->
    <style name="but_brown_style" parent="but_base_style">
        <item name="android:textColor">@color/text_button</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:layout_height">@dimen/butDialogH</item>
    </style>

</resources>