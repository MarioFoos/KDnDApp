<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dialogPadding">

    <TextView
        android:id="@+id/textSimpleTitle"
        style="@style/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:textAlignment="viewStart"
        tools:text="Error" />

    <TextView
        android:id="@+id/textInfoDesc"
        style="@style/text_info"
        android:layout_marginTop="@dimen/controlMarginV"
        android:overScrollMode="ifContentScrolls"
        tools:text="Texto de prueba de la descripciÃ³n" />

    <Button
        android:id="@+id/butSimpleOk"
        style="@style/but_brown_style"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dialogPadding"
        tools:ignore="TouchTargetSizeCheck"
        tools:text="Aceptar" />

</LinearLayout>