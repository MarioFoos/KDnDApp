<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDialogWealth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/dialogPadding">

        <LinearLayout
            android:id="@+id/layoutPlatinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPlatinum"
                android:layout_width="@dimen/butWealthH"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:src="@drawable/coin_platinum" />

            <Button
                android:id="@+id/butPlatinumInc"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/plus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/textPlatinum"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_edit"
                android:textAlignment="textEnd"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:text="1" />

            <Button
                android:id="@+id/butPlatinumDec"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:layout_marginTop="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/minus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgGold"
                android:layout_width="@dimen/butWealthH"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:src="@drawable/coin_gold" />

            <Button
                android:id="@+id/butGoldInc"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/plus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textGold"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_edit"
                android:textAlignment="textEnd"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:text="1" />

            <Button
                android:id="@+id/butGoldDec"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/minus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutElectrum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgElectrum"
                android:layout_width="@dimen/butWealthH"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:src="@drawable/coin_electrum" />

            <Button
                android:id="@+id/butElectrumInc"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/plus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textElectrum"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_edit"
                android:textAlignment="textEnd"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:text="1" />

            <Button
                android:id="@+id/butElectrumDec"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/minus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSilver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSilver"
                android:layout_width="@dimen/butWealthH"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:src="@drawable/coin_silver" />

            <Button
                android:id="@+id/butSilverInc"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/plus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSilver"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_edit"
                android:textAlignment="textEnd"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:text="1" />

            <Button
                android:id="@+id/butSilverDec"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/minus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCupper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCupper"
                android:layout_width="@dimen/butWealthH"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:src="@drawable/coin_cupper" />

            <Button
                android:id="@+id/butCupperInc"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/plus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textCupper"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_edit"
                android:textAlignment="textEnd"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:text="1" />

            <Button
                android:id="@+id/butCupperDec"
                android:layout_width="@dimen/butWealthW"
                android:layout_height="@dimen/butWealthH"
                android:layout_margin="@dimen/marginControls"
                android:background="@drawable/shape_button"
                android:text="@string/minus"
                android:textColor="@color/text_button_brown"
                android:textSize="@dimen/fontNormal"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:padding="@dimen/dialogPadding">

        <Button
            android:id="@+id/butOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginControls"
            android:background="@drawable/shape_button"
            android:text="@string/ok"
            android:textColor="@color/text_button_brown" />

        <Button
            android:id="@+id/butCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginControls"
            android:background="@drawable/shape_button"
            android:text="@string/cancel"
            android:textColor="@color/text_button_brown" />
    </LinearLayout>

</LinearLayout>