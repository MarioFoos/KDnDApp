<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDialogHp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical"
    android:padding="@dimen/dialogPadding">

    <TextView
        android:id="@+id/textHpTitle"
        style="@style/text_title"
        android:layout_marginBottom="@dimen/controlMarginV"
        android:layout_weight="1"
        tools:text="Puntos de golpe" />

    <LinearLayout
        android:id="@+id/layoutHpCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutHpCurrentChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mlf.kdndapp.ui.theme.PushButton
                android:id="@+id/butHpCurrentDec"
                style="@style/but_brown_style"
                android:layout_width="@dimen/butChangeW"
                android:text="@string/minus"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textHpCurrent"
                style="@style/edit_style"
                android:layout_width="@dimen/editDialogW"
                android:layout_marginHorizontal="@dimen/dialogMargins"
                android:textAlignment="textEnd"
                tools:text="1" />

            <com.mlf.kdndapp.ui.theme.PushButton
                android:id="@+id/butHpCurrentInc"
                style="@style/but_brown_style"
                android:layout_width="@dimen/butChangeW"
                android:layout_height="@dimen/butChangeH"
                android:text="@string/plus"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/textHpCurrentDesc"
            style="@style/text_desc"
            android:layout_marginStart="@dimen/dialogMargins"
            tools:text="Actuales" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHpMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dialogMargins"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutHpMaxChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mlf.kdndapp.ui.theme.PushButton
                android:id="@+id/butHpMaxDec"
                style="@style/but_brown_style"
                android:layout_width="@dimen/butChangeW"
                android:text="@string/minus"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textHpMax"
                style="@style/edit_style"
                android:layout_width="@dimen/editDialogW"
                android:layout_marginHorizontal="@dimen/dialogMargins"
                android:textAlignment="textEnd"
                tools:text="1" />

            <com.mlf.kdndapp.ui.theme.PushButton
                android:id="@+id/butHpMaxInc"
                style="@style/but_brown_style"
                android:layout_width="@dimen/butChangeW"
                android:text="@string/plus"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/textHpMaxDesc"
            style="@style/text_desc"
            android:layout_marginStart="@dimen/dialogMargins"
            tools:text="MÃ¡ximos" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHpTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutHpTempChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mlf.kdndapp.ui.theme.PushButton
                android:id="@+id/butHpTempDec"
                style="@style/but_brown_style"
                android:layout_width="@dimen/butChangeW"
                android:text="@string/minus"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textHpTemp"
                style="@style/edit_style"
                android:layout_width="@dimen/editDialogW"
                android:layout_marginHorizontal="@dimen/dialogMargins"
                android:textAlignment="textEnd"
                tools:text="1" />

            <com.mlf.kdndapp.ui.theme.PushButton
                android:id="@+id/butHpTempInc"
                style="@style/but_brown_style"
                android:layout_width="@dimen/butChangeW"
                android:text="@string/plus"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/textHpTempDesc"
            style="@style/text_desc"
            android:layout_marginStart="@dimen/dialogMargins"
            tools:text="Temporales" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dialogPadding"
        android:gravity="end">

        <Button
            android:id="@+id/butHpOk"
            style="@style/but_brown_style"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/dialogMargins"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Aceptar" />

        <Button
            android:id="@+id/butHpCancel"
            style="@style/but_brown_style"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/dialogMargins"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Cancelar" />
    </LinearLayout>

</LinearLayout>