            tools:text="0" />

        <com.mlf.kdndapp.ui.theme.PushButton
            android:id="@+id/butCupperInc1"
            style="@style/but_brown_style"
            android:layout_width="@dimen/butChangeW"
            android:layout_height="@dimen/butChangeH"
            android:layout_marginEnd="@dimen/dialogMargins"
            android:layout_weight="1"
            android:text="@string/plus1"
            tools:ignore="TouchTargetSizeCheck" />

        <com.mlf.kdndapp.ui.theme.PushButton
            android:id="@+id/butCupperInc10"
            style="@style/but_brown_style"
            android:layout_width="@dimen/butChangeW"
            android:layout_height="@dimen/butChangeH"
            android:layout_weight="1"
            android:text="@string/plus10"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dialogPadding"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/butCoinsAdd"
            style="@style/but_brown_style"
            android:layout_height="@dimen/butDialogH"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Agregar" />

        <Button
            android:id="@+id/butCoinsSub"
            style="@style/but_brown_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/butDialogH"
            android:layout_marginHorizontal="@dimen/dialogMargins"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Quitar" />

        <Button
            android:id="@+id/butCoinsCancel2"
            style="@style/but_brown_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/butDialogH"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Cancelar" />
    </LinearLayout>
</LinearLayout>