        <com.mlf.kdndapp.ui.theme.PushButton
            android:id="@+id/butSilverDec10"
            style="@style/but_brown_style"
            android:layout_width="@dimen/butChangeW"
            android:layout_height="@dimen/butChangeH"
            android:layout_marginEnd="@dimen/dialogMargins"
            android:text="@string/minus10"
            tools:ignore="TouchTargetSizeCheck" />

        <com.mlf.kdndapp.ui.theme.PushButton
            android:id="@+id/butSilverDec1"
            style="@style/but_brown_style"
            android:layout_width="@dimen/butChangeW"
            android:layout_height="@dimen/butChangeH"
            android:layout_weight="1"
            android:text="@string/minus1"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textCoinsSilver"
            style="@style/edit_style"
            android:layout_width="@dimen/editWealthW"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dialogMargins"
            android:textAlignment="viewEnd"
            tools:text="0" />

        <com.mlf.kdndapp.ui.theme.PushButton
            android:id="@+id/butSilverInc1"
            style="@style/but_brown_style"
            android:layout_width="@dimen/butChangeW"
            android:layout_height="@dimen/butChangeH"
            android:layout_marginEnd="@dimen/dialogMargins"
            android:layout_weight="1"
            android:text="@string/plus1"
            tools:ignore="TouchTargetSizeCheck" />

        <com.mlf.kdndapp.ui.theme.PushButton
            android:id="@+id/butSilverInc10"
            style="@style/but_brown_style"
            android:layout_width="@dimen/butChangeW"
            android:layout_height="@dimen/butChangeH"
            android:layout_weight="1"
            android:text="@string/plus10"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCoinsCupper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageCoinsCupper"
            android:layout_width="@dimen/butChangeH"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dialogMargins"
            android:src="@drawable/coin_cupper"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <com.mlf.kdndapp.ui.theme.PushButton
            android:id="@+id/butCupperDec10"
            style="@style/but_brown_style"
            android:layout_width="@dimen/butChangeW"
            android:layout_height="@dimen/butChangeH"
            android:layout_marginEnd="@dimen/dialogMargins"
            android:text="@string/minus10"
            tools:ignore="TouchTargetSizeCheck" />

        <com.mlf.kdndapp.ui.theme.PushButton
            android:id="@+id/butCupperDec1"
            style="@style/but_brown_style"
            android:layout_width="@dimen/butChangeW"
            android:layout_height="@dimen/butChangeH"
            android:layout_weight="1"
            android:text="@string/minus1"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textCoinsCupper"
            style="@style/edit_style"
            android:layout_width="@dimen/editWealthW"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dialogMargins"
